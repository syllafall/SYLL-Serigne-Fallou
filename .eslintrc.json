{
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": ["eslint:recommended"],
    "overrides": [
      {
        "files": ["**/*.test.js"],
        "excludedFiles": ["**/*.js"]
      }
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "commonjs"
    },
    "rules": {
      "no-unused-vars": "error",
      "no-undef": "error",
      "no-console": "error"
    },
    "globals": {
      "__dirname": "readonly",
      "module": "readonly"
    },
    "ignorePatterns": ["**/*.test.js"]
  }
  